<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.mpeiapp"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:installLocation="auto"
      android:icon="@mipmap/cool"
      android:roundIcon="@mipmap/cool_round"
      android:usesCleartextTraffic="true"
      android:allowBackup="false"
      android:theme="@style/AppTheme">
      <activity
        android:name=".MainActivity"
          android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustPan"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>
        <activity-alias
            android:name="com.mpeiapp.MainActivitycool"
            android:enabled="false"
            android:icon="@mipmap/cool"
            android:roundIcon="@mipmap/cool_round"
            android:targetActivity=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.mpeiapp.MainActivitydragons"
            android:enabled="false"
            android:icon="@mipmap/dragons"
            android:roundIcon="@mipmap/dragons_round"
            android:targetActivity=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.mpeiapp.MainActivitysimple"
            android:enabled="false"
            android:icon="@mipmap/simple"
            android:roundIcon="@mipmap/simple_round"
            android:targetActivity=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.mpeiapp.MainActivitymatterial"
            android:enabled="false"
            android:icon="@mipmap/matterial"
            android:roundIcon="@mipmap/matterial_round"
            android:targetActivity=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.mpeiapp.MainActivitygold"
            android:enabled="false"
            android:icon="@mipmap/gold"
            android:roundIcon="@mipmap/gold_round"
            android:targetActivity=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
    </application>
</manifest>
